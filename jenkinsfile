pipeline {
  agent any
  stages {
    stage ('Initialize') {
        steps {
            sh '''
                echo "PATH = ${PATH}"
                echo "M2_HOME = ${M2_HOME}"
            ''' 
        }
    }
    stage ('checkout') {
      steps {
        echo 'Checking out code'
        checkout scm
      }
    }
    stage ('Build') {
      steps {
          sh 'mvn -Dmaven.test.failure.ignore=true install' 
      }
      post {
          success {
              ech "build successful"
          }
      }
    }
    stage ('Test') {
      steps {
        echo 'Testing code'
      }
    }
  }
}
